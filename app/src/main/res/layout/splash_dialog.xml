<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="50dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Select places to show"
                android:layout_weight="8"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="200dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="50dp"
            android:layout_height="300dp"
            android:layout_alignBottom="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp" >
            <RadioButton
                android:id="@+id/RadioButton_All"
                android:textSize="0sp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <RadioButton
                android:id="@+id/RadioButton_Schools"
                android:textSize="0sp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <RadioButton
                android:id="@+id/RadioButton_Residence"
                android:textSize="0sp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <RadioButton
                android:id="@+id/RadioButton_Hotels"
                android:textSize="0sp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <RadioButton
                android:id="@+id/RadioButton_Building"
                android:textSize="0sp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <RadioButton
                android:id="@+id/RadioButton_Facility"
                android:textSize="0sp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right" >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/selectall" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView_All"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right" >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/school" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/textView_Schools"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="TextView"
                        android:layout_weight="8"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="right" >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/residence" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/textView_Residence"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="TextView"
                    android:layout_weight="8"
                    />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right" >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/hotel" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/textView_Hotels"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="TextView"
                        android:layout_weight="8"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right" >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/building" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView_Building"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="right" >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/facility" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView_Facility"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="8"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="8"
            />
        <Button
            android:layout_weight="2"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="cancel"/>
    </LinearLayout>
</LinearLayout>