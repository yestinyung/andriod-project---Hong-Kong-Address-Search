<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project1.DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#6EB94F"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/imageButton_baack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/eeee" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/ActionBar_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="TextView"
                    android:layout_weight="8"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_nameOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:text="TextView" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/imageButton_nameOther"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/eeee" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="9"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/textView_name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="TextView"
                    android:layout_weight="8"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/imageButton_name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/eeee" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="9"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/textView_addressOther"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="TextView"
                    android:layout_weight="8"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/imageButton_addressOther"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/eeee" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="9"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/textView_address"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="TextView"
                    android:layout_weight="8"
                    />
            </LinearLayout>
            <ImageButton
                android:id="@+id/imageButton_address"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/eeee" />
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView_brief"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextViedsaffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffw"
            android:layout_weight="8"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:layout_weight="5"
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="location" />
            <Button
                android:layout_weight="5"
                android:id="@+id/how_to_go"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="how to go"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
